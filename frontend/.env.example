# üè¢‚ö° Energy Optimizer Pro - Frontend Environment Configuration
# ================================================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# App Configuration
NEXT_PUBLIC_APP_NAME="Energy Optimizer Pro"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Features Toggle
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ML_FEATURES=true

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_HOTJAR_ID=

# Maps and External Services (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=

# Theme and UI
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_PRIMARY_COLOR=blue
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Performance
NEXT_PUBLIC_MAX_FILE_SIZE=52428800  # 50MB in bytes
NEXT_PUBLIC_CHUNK_SIZE=1048576      # 1MB chunks for uploads
NEXT_PUBLIC_CACHE_TTL=300           # 5 minutes

# Development (Only for development)
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_SHOW_DEV_TOOLS=false
NEXT_PUBLIC_MOCK_API=false

# Security
NEXT_PUBLIC_SESSION_TIMEOUT=28800   # 8 hours in seconds
NEXT_PUBLIC_ENABLE_CSP=true

# Notifications
NEXT_PUBLIC_NOTIFICATION_DURATION=5000  # 5 seconds
NEXT_PUBLIC_MAX_NOTIFICATIONS=50

# Chart and Visualization
NEXT_PUBLIC_CHART_UPDATE_INTERVAL=30000  # 30 seconds
NEXT_PUBLIC_MAX_CHART_POINTS=1000
NEXT_PUBLIC_DEFAULT_CHART_HEIGHT=400

# Real-time Data
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000   # 5 seconds
NEXT_PUBLIC_WS_MAX_RETRIES=10

# Feature Flags (can be overridden via admin panel)
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_FEATURE_PREDICTIVE_MODELS=true
NEXT_PUBLIC_FEATURE_EXPORT_REPORTS=true
NEXT_PUBLIC_FEATURE_TEAM_COLLABORATION=true
